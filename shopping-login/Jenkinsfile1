pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/angelhumera/shopping_login.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t shopping-login-app .'
            }
        }

        stage('Run Container') {
            steps {
                # Remove old container if exists
                sh 'docker rm -f shopping-login-app || true'
                # Run new container
                sh 'docker run -d -p 8081:80 --name shopping-login-app shopping-login-app'
            }
        }
    }
}
